<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/bg_round_white_fooe_more"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_margin="1dp"
        android:src="@color/yellow_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="平遥刀削面"/>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.gxg.scrolltablayout.scrollandtablayout.widght.ratingbar.CBRatingBar
            android:id="@+id/rating_bar"
            app:starCount="5"
            app:starCanTouch="false"
            app:starSize="12dp"
            app:starSpace="2dp"
            app:starFillColor="@color/backgroud_all"
            app:starShowStroke="false"
            app:starCoverColor="@color/yellow_top"
            app:starPathData="@string/round_star"
            app:starPathDataId="@string/round_star"
            app:starMaxProgress="5"
            app:starProgress="4"
            app:starCoverDir="left_to_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_price"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:text="94/人"/>
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:text="串串香  双井"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:text="4.9km"/>
    </LinearLayout>
</LinearLayout>