<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_top"
        android:src="@color/color_part4"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_alignLeft="@+id/iv_top"
        android:layout_alignRight="@+id/iv_top"
        android:layout_alignBottom="@+id/iv_top"
        android:gravity="center"
        android:background="@color/black_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_good_num"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_dianzan"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="357人点赞"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_food_title"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麻辣牛肉"/>
</RelativeLayout>